    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const chronotypeChartCtx = document.getElementById('chronotypeChart').getContext('2d');
            const chronotypeChart = new Chart(chronotypeChartCtx, {
                type: 'bar',
                data: {
                    labels: ['မနက်စောစောထသူ (Morning Lark)', 'ညဉ့်နက်သူ (Night Owl)'],
